# EditorConfig: http://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4

# 4 space indentation
[*.{c,h,cpp,hpp,js,css,html}]
indent_style = space
indent_size = 4

# who needs to commit a indent change
[usb_main.c]
indent_style = tab

[*.{psh,vsh}]
indent_style = space
indent_size = 2

# Tab indentation
[Makefile*]
indent_style = tab
